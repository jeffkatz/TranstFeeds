@{
    ViewData["Title"] = "Data Management";
}

<div class="container mx-auto hybrid-section">
    <!-- Header -->
    <div class="mb-10 text-center">
        <h2 class="text-3xl font-bold text-gray-800 tracking-tight">Data Management</h2>
        <p class="text-gray-500 mt-2">Import and export your GTFS data with ease</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        
        <!-- Import Section -->
        <div class="space-y-8">
            <h3 class="text-xl font-semibold text-gray-700 border-b pb-2">Import Data</h3>

            <!-- Stops Upload -->
            <div class="hybrid-card group hover:shadow-lg transition-all duration-300">
                <div class="flex justify-between items-center mb-4">
                    <h4 class="text-lg font-medium text-gray-800 group-hover:text-indigo-600 transition-colors">Stops</h4>
                    <span class="text-xs font-mono bg-gray-100 text-gray-500 px-2 py-1 rounded">stops.txt</span>
                </div>
                <form asp-controller="Import" asp-action="UploadStops" method="post" enctype="multipart/form-data" class="space-y-4">
                    <input type="file" name="file" accept=".txt,.csv" class="hybrid-input text-sm file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" required />
                    <button type="submit" class="w-full py-2.5 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 shadow-sm hover:shadow-md transition-all flex justify-center items-center">
                        <i class="fas fa-cloud-upload-alt mr-2"></i> Import Stops
                    </button>
                </form>
            </div>

            <!-- Routes Upload -->
            <div class="hybrid-card group hover:shadow-lg transition-all duration-300">
                <div class="flex justify-between items-center mb-4">
                    <h4 class="text-lg font-medium text-gray-800 group-hover:text-green-600 transition-colors">Routes</h4>
                    <span class="text-xs font-mono bg-gray-100 text-gray-500 px-2 py-1 rounded">routes.txt</span>
                </div>
                <form asp-controller="Import" asp-action="UploadRoutes" method="post" enctype="multipart/form-data" class="space-y-4">
                    <input type="file" name="file" accept=".txt,.csv" class="hybrid-input text-sm file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100" required />
                    <button type="submit" class="w-full py-2.5 bg-green-600 text-white rounded-lg hover:bg-green-700 shadow-sm hover:shadow-md transition-all flex justify-center items-center">
                        <i class="fas fa-cloud-upload-alt mr-2"></i> Import Routes
                    </button>
                </form>
            </div>

            <!-- Trips Upload -->
            <div class="hybrid-card group hover:shadow-lg transition-all duration-300">
                <div class="flex justify-between items-center mb-4">
                    <h4 class="text-lg font-medium text-gray-800 group-hover:text-teal-600 transition-colors">Trips</h4>
                    <span class="text-xs font-mono bg-gray-100 text-gray-500 px-2 py-1 rounded">trips.txt</span>
                </div>
                <form asp-controller="Import" asp-action="UploadTrips" method="post" enctype="multipart/form-data" class="space-y-4">
                    <input type="file" name="file" accept=".txt,.csv" class="hybrid-input text-sm file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-teal-50 file:text-teal-700 hover:file:bg-teal-100" required />
                    <button type="submit" class="w-full py-2.5 bg-teal-600 text-white rounded-lg hover:bg-teal-700 shadow-sm hover:shadow-md transition-all flex justify-center items-center">
                        <i class="fas fa-cloud-upload-alt mr-2"></i> Import Trips
                    </button>
                </form>
            </div>
        </div>

        <!-- Export Section -->
        <div class="space-y-8">
            <h3 class="text-xl font-semibold text-gray-700 border-b pb-2">Export Data</h3>

            <div class="hybrid-card bg-gradient-to-br from-white to-gray-50">
                <p class="text-gray-600 mb-6">Download your current dataset in standard GTFS format.</p>
                
                <div class="space-y-4">
                    <a asp-action="ExportStops" class="flex items-center justify-between p-4 bg-white border border-gray-200 rounded-lg hover:border-indigo-300 hover:shadow-md transition-all group">
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 mr-4 group-hover:bg-indigo-600 group-hover:text-white transition-colors">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <h5 class="font-medium text-gray-900">Stops</h5>
                                <p class="text-xs text-gray-500">stops.txt</p>
                            </div>
                        </div>
                        <i class="fas fa-download text-gray-400 group-hover:text-indigo-600"></i>
                    </a>

                    <a asp-action="ExportRoutes" class="flex items-center justify-between p-4 bg-white border border-gray-200 rounded-lg hover:border-green-300 hover:shadow-md transition-all group">
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center text-green-600 mr-4 group-hover:bg-green-600 group-hover:text-white transition-colors">
                                <i class="fas fa-route"></i>
                            </div>
                            <div>
                                <h5 class="font-medium text-gray-900">Routes</h5>
                                <p class="text-xs text-gray-500">routes.txt</p>
                            </div>
                        </div>
                        <i class="fas fa-download text-gray-400 group-hover:text-green-600"></i>
                    </a>

                    <a asp-action="ExportTrips" class="flex items-center justify-between p-4 bg-white border border-gray-200 rounded-lg hover:border-teal-300 hover:shadow-md transition-all group">
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-teal-100 flex items-center justify-center text-teal-600 mr-4 group-hover:bg-teal-600 group-hover:text-white transition-colors">
                                <i class="fas fa-bus"></i>
                            </div>
                            <div>
                                <h5 class="font-medium text-gray-900">Trips</h5>
                                <p class="text-xs text-gray-500">trips.txt</p>
                            </div>
                        </div>
                        <i class="fas fa-download text-gray-400 group-hover:text-teal-600"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
