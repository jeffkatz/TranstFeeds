@model TransitFeeds.Models.TransitCalendar

@{
    ViewData["Title"] = "Create Calendar";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Create Service Calendar</h1>
            <p class="text-gray-500 mt-1">Define service availability for a date range.</p>
        </div>
        <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg font-medium text-gray-700 shadow-sm hover:bg-gray-50 transition-colors">
            Cancel
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow-soft border border-gray-100 overflow-hidden">
        <form asp-action="Create" class="p-8">
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 text-red-700 rounded-xl text-sm border border-red-100"></div>

            <div class="space-y-8">
                <!-- Basic Info -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label asp-for="GtfsServiceId" class="block text-sm font-semibold text-gray-700">GTFS Service ID</label>
                        <input asp-for="GtfsServiceId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" placeholder="e.g. WEEKDAY" />
                        <span asp-validation-for="GtfsServiceId" class="text-xs text-red-500"></span>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div class="space-y-2">
                            <label asp-for="StartDate" class="block text-sm font-semibold text-gray-700">Start Date</label>
                            <input asp-for="StartDate" type="date" class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                            <span asp-validation-for="StartDate" class="text-xs text-red-500"></span>
                        </div>
                        <div class="space-y-2">
                            <label asp-for="EndDate" class="block text-sm font-semibold text-gray-700">End Date</label>
                            <input asp-for="EndDate" type="date" class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                            <span asp-validation-for="EndDate" class="text-xs text-red-500"></span>
                        </div>
                    </div>
                </div>

                <!-- Days of Week -->
                <div class="space-y-4">
                    <h3 class="text-sm font-bold text-gray-400 uppercase tracking-widest">Active Days</h3>
                    <div class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-7 gap-4">
                        @foreach (var day in new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" })
                        {
                            <div class="flex flex-col items-center p-4 rounded-xl border border-gray-100 bg-gray-50 transition-all hover:bg-white hover:shadow-sm">
                                <label class="mb-3 text-xs font-semibold text-gray-500">@day.Substring(0, 3)</label>
                                <input type="checkbox" name="@day" value="true" class="w-6 h-6 rounded-md border-gray-300 text-blue-600 focus:ring-blue-500" />
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="mt-10 pt-6 border-t border-gray-100 flex justify-end gap-3">
                <a asp-action="Index" class="px-6 py-2.5 border border-gray-300 rounded-xl font-medium text-gray-700 hover:bg-gray-50 transition-all">Discard</a>
                <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white rounded-xl font-medium shadow-sm hover:bg-blue-700 transition-all">Create Calendar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
