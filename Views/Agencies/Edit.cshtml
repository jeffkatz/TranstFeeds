@model TransitFeeds.Models.Agency

@{
    ViewData["Title"] = "Edit Agency";
}

<div class="max-w-3xl mx-auto">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Edit Agency</h1>
            <p class="text-gray-500 mt-1">Modify the details for @Model.AgencyName</p>
        </div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg font-medium text-gray-700 shadow-sm hover:bg-gray-50 transition-colors">
            Back to Details
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow-soft border border-gray-100 overflow-hidden">
        <form asp-action="Edit" class="p-8">
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 text-red-700 rounded-xl text-sm border border-red-100"></div>
            <input type="hidden" asp-for="Id" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Agency ID -->
                <div class="space-y-2">
                    <label asp-for="GtfsAgencyId" class="block text-sm font-semibold text-gray-700">GTFS Agency ID</label>
                    <input asp-for="GtfsAgencyId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    <span asp-validation-for="GtfsAgencyId" class="text-xs text-red-500"></span>
                </div>

                <!-- Agency Name -->
                <div class="space-y-2">
                    <label asp-for="AgencyName" class="block text-sm font-semibold text-gray-700">Agency Name</label>
                    <input asp-for="AgencyName" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    <span asp-validation-for="AgencyName" class="text-xs text-red-500"></span>
                </div>

                <!-- Agency URL -->
                <div class="md:col-span-2 space-y-2">
                    <label asp-for="AgencyUrl" class="block text-sm font-semibold text-gray-700">Agency Website URL</label>
                    <div class="relative">
                        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
                            <i class="fas fa-link text-xs"></i>
                        </span>
                        <input asp-for="AgencyUrl" class="w-full pl-10 pr-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    </div>
                    <span asp-validation-for="AgencyUrl" class="text-xs text-red-500"></span>
                </div>

                <!-- Agency Timezone -->
                <div class="space-y-2">
                    <label asp-for="AgencyTimezone" class="block text-sm font-semibold text-gray-700">Timezone</label>
                    <input asp-for="AgencyTimezone" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    <span asp-validation-for="AgencyTimezone" class="text-xs text-red-500"></span>
                </div>

                <!-- Agency Lang -->
                <div class="space-y-2">
                    <label asp-for="AgencyLang" class="block text-sm font-semibold text-gray-700">Language</label>
                    <input asp-for="AgencyLang" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    <span asp-validation-for="AgencyLang" class="text-xs text-red-500"></span>
                </div>

                <!-- Agency Phone -->
                <div class="md:col-span-2 space-y-2">
                    <label asp-for="AgencyPhone" class="block text-sm font-semibold text-gray-700">Phone Number (Optional)</label>
                    <input asp-for="AgencyPhone" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    <span asp-validation-for="AgencyPhone" class="text-xs text-red-500"></span>
                </div>
            </div>

            <div class="mt-10 pt-6 border-t border-gray-100 flex justify-end gap-3">
                <a asp-action="Index" class="px-6 py-2.5 border border-gray-300 rounded-xl font-medium text-gray-700 hover:bg-gray-50 transition-all">Discard Changes</a>
                <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white rounded-xl font-medium shadow-sm hover:bg-blue-700 transition-all">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
