@model TransitFeeds.Models.FeedInfo

@{
    ViewData["Title"] = "Add Feed Info";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Add Feed Information</h1>
            <p class="text-gray-500 mt-1">Provide metadata about this GTFS dataset.</p>
        </div>
        <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg font-medium text-gray-700 shadow-sm hover:bg-gray-50 transition-colors">
            Cancel
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow-soft border border-gray-100 overflow-hidden">
        <form asp-action="Create" class="p-8">
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 text-red-700 rounded-xl text-sm border border-red-100"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                <!-- Publisher Info -->
                <div class="space-y-2">
                    <label asp-for="FeedPublisherName" class="block text-sm font-semibold text-gray-700">Publisher Name</label>
                    <input asp-for="FeedPublisherName" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="e.g. MTA New York City Transit" />
                    <span asp-validation-for="FeedPublisherName" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="FeedPublisherUrl" class="block text-sm font-semibold text-gray-700">Publisher URL</label>
                    <input asp-for="FeedPublisherUrl" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="http://..." />
                    <span asp-validation-for="FeedPublisherUrl" class="text-xs text-red-500"></span>
                </div>

                <!-- Locality & Dates -->
                <div class="space-y-2">
                    <label asp-for="FeedLang" class="block text-sm font-semibold text-gray-700">Language (ISO 639-1)</label>
                    <input asp-for="FeedLang" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="e.g. en" maxlength="50" />
                    <span asp-validation-for="FeedLang" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="FeedVersion" class="block text-sm font-semibold text-gray-700">Feed Version</label>
                    <input asp-for="FeedVersion" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="e.g. Dec 2023" />
                    <span asp-validation-for="FeedVersion" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="FeedStartDate" class="block text-sm font-semibold text-gray-700">Start Date</label>
                    <input asp-for="FeedStartDate" type="date" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" />
                    <span asp-validation-for="FeedStartDate" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="FeedEndDate" class="block text-sm font-semibold text-gray-700">End Date</label>
                    <input asp-for="FeedEndDate" type="date" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" />
                    <span asp-validation-for="FeedEndDate" class="text-xs text-red-500"></span>
                </div>

                <!-- Contact Info -->
                <div class="space-y-2">
                    <label asp-for="FeedContactEmail" class="block text-sm font-semibold text-gray-700">Contact Email</label>
                    <input asp-for="FeedContactEmail" type="email" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="transit-data@agency.org" />
                    <span asp-validation-for="FeedContactEmail" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="FeedContactUrl" class="block text-sm font-semibold text-gray-700">Contact URL</label>
                    <input asp-for="FeedContactUrl" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="http://..." />
                    <span asp-validation-for="FeedContactUrl" class="text-xs text-red-500"></span>
                </div>
            </div>

            <div class="mt-10 pt-6 border-t border-gray-100 flex justify-end gap-3">
                <a asp-action="Index" class="px-6 py-2.5 border border-gray-300 rounded-xl font-medium text-gray-700 hover:bg-gray-50 transition-all">Discard</a>
                <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white rounded-xl font-medium shadow-sm hover:bg-blue-700 transition-all">Save Metadata</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
