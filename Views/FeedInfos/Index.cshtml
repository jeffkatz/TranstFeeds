@model IEnumerable<TransitFeeds.Models.FeedInfo>

@{
    ViewData["Title"] = "Feed Information";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Dataset Metadata (feed_info)</h1>
            <p class="text-gray-500 mt-1">Publisher information, versioning, and contact details for the current dataset.</p>
        </div>
        <a asp-action="Create" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg font-medium shadow-sm hover:bg-blue-700 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            Add Metadata
        </a>
    </div>

    @if (!Model.Any()) {
        <div class="bg-blue-50 border border-blue-100 rounded-2xl p-12 text-center">
            <svg class="w-16 h-16 text-blue-200 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            <h3 class="text-lg font-semibold text-blue-900">No Feed Metadata Found</h3>
            <p class="text-blue-600 mt-1">GTFS datasets often include optional feed_info.txt file.</p>
            <a asp-action="Create" class="mt-4 inline-block text-blue-700 font-medium hover:underline">Add manually &rarr;</a>
        </div>
    } else {
        @foreach (var item in Model) {
            <div class="bg-white rounded-2xl shadow-soft border border-gray-100 overflow-hidden mb-6">
                <div class="p-8">
                    <div class="flex items-start justify-between mb-8">
                        <div>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mb-2">
                                Dataset Version: @(item.FeedVersion ?? "N/A")
                            </span>
                            <h2 class="text-2xl font-bold text-gray-900">@item.FeedPublisherName</h2>
                            <a href="@item.FeedPublisherUrl" target="_blank" class="text-blue-600 hover:underline text-sm">@item.FeedPublisherUrl</a>
                        </div>
                        <div class="flex gap-2">
                             <a asp-action="Edit" asp-route-id="@item.Id" class="px-4 py-2 border border-gray-200 rounded-xl text-gray-600 font-medium hover:bg-gray-50 transition-all">Edit</a>
                             <a asp-action="Delete" asp-route-id="@item.Id" class="px-4 py-2 border border-red-100 text-red-600 rounded-xl font-medium hover:bg-red-50 transition-all">Delete</a>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                        <div class="bg-gray-50/50 p-4 rounded-xl">
                            <h5 class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Validity Period</h5>
                            <p class="text-gray-900 font-medium">@item.FeedStartDate?.ToString("MMM dd, yyyy") &mdash; @item.FeedEndDate?.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div class="bg-gray-50/50 p-4 rounded-xl">
                            <h5 class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Language</h5>
                            <p class="text-gray-900 font-medium font-mono uppercase">@item.FeedLang</p>
                        </div>
                        <div class="bg-gray-50/50 p-4 rounded-xl">
                            <h5 class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Contact</h5>
                            <p class="text-gray-900 font-medium">
                                @if(!string.IsNullOrEmpty(item.FeedContactEmail)) {
                                    <a href="mailto:@item.FeedContactEmail" class="hover:underline">@item.FeedContactEmail</a>
                                } else {
                                    <span class="text-gray-400">None provided</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
