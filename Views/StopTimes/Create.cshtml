@model TransitFeeds.Models.StopTime

@{
    ViewData["Title"] = "Create Stop Time";
}

<div class="app-header">
    <div class="header-title">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="header-actions">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TripId" class="control-label"></label>
                    <select asp-for="TripId" class ="form-control" asp-items="ViewBag.TripId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="StopId" class="control-label"></label>
                    <select asp-for="StopId" class ="form-control" asp-items="ViewBag.StopId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="StopSequence" class="control-label"></label>
                    <input asp-for="StopSequence" class="form-control" />
                    <span asp-validation-for="StopSequence" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ArrivalTime" class="control-label"></label>
                    <input asp-for="ArrivalTime" class="form-control" />
                    <span asp-validation-for="ArrivalTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartureTime" class="control-label"></label>
                    <input asp-for="DepartureTime" class="form-control" />
                    <span asp-validation-for="DepartureTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StopHeadsign" class="control-label"></label>
                    <input asp-for="StopHeadsign" class="form-control" />
                    <span asp-validation-for="StopHeadsign" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PickupType" class="control-label"></label>
                    <input asp-for="PickupType" class="form-control" />
                    <span asp-validation-for="PickupType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DropOffType" class="control-label"></label>
                    <input asp-for="DropOffType" class="form-control" />
                    <span asp-validation-for="DropOffType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShapeDistTraveled" class="control-label"></label>
                    <input asp-for="ShapeDistTraveled" class="form-control" />
                    <span asp-validation-for="ShapeDistTraveled" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
