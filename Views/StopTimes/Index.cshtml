@model IEnumerable<TransitFeeds.Models.StopTime>

@{
    ViewData["Title"] = "Stop Times";
}

<div class="container mx-auto px-4 py-8">
    
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 tracking-tight">Stop Times</h1>
            <p class="text-gray-500 mt-1">Manage scheduled arrival and departure times</p>
        </div>
        <div>
            <a asp-action="Create" class="inline-flex items-center px-4 py-2 bg-indigo-600 border border-transparent rounded-lg font-semibold text-xs text-white uppercase tracking-widest hover:bg-indigo-700 active:bg-indigo-900 focus:outline-none focus:border-indigo-900 focus:ring ring-indigo-300 disabled:opacity-25 transition ease-in-out duration-150 shadow-sm">
                <i class="fas fa-plus mr-2"></i> New Stop Time
            </a>
        </div>
    </div>

    <!-- Bulk Actions Alert -->
    <div id="bulkActions" class="hidden animate-fade-in bg-indigo-50 border-l-4 border-indigo-500 p-4 mb-6 rounded-r shadow-sm flex justify-between items-center">
        <div class="flex items-center">
            <i class="fas fa-check-square text-indigo-500 mr-3"></i>
            <span class="font-medium text-indigo-700">Selected <span id="selectedCount" class="font-bold">0</span> items</span>
        </div>
        <button type="button" onclick="submitBulkDelete()" class="px-3 py-1 bg-red-600 hover:bg-red-700 text-white rounded text-xs font-bold uppercase tracking-wider transition-colors shadow-sm">
            <i class="fas fa-trash-alt mr-1"></i> Delete Selected
        </button>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 rounded-r shadow-sm flex justify-between items-center">
             <div class="flex">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                <p class="text-green-700">@TempData["SuccessMessage"]</p>
            </div>
             <button onclick="this.parentElement.remove()" class="text-green-400 hover:text-green-600"><i class="fas fa-times"></i></button>
        </div>
    }

    <!-- Search & Filters -->
    <div class="bg-white rounded-t-xl border border-gray-200 p-4 border-b-0">
        <div class="relative max-w-md w-full">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-search text-gray-400"></i>
            </div>
            <input type="text" id="searchInput" onkeyup="filterTable()" 
                   class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-150 ease-in-out" 
                   placeholder="Search by trip, stop or time...">
        </div>
    </div>

    <!-- Table -->
    <form id="bulkDeleteForm" asp-action="BulkDelete" method="post" class="bg-white shadow-sm rounded-b-xl border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200" id="stopTimesTable">
                <thead class="bg-gray-50">
                    <tr>
                         <th scope="col" class="px-6 py-3 text-left">
                             <input type="checkbox" id="selectAll" onclick="toggleAll(this)" class="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 cursor-pointer">
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trip</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stop</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sequence</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input type="checkbox" name="ids" value="@item.Id" class="item-checkbox h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 cursor-pointer" onchange="updateBulkActionState()">
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                @Html.DisplayFor(modelItem => item.Trip.GtfsTripId)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @Html.DisplayFor(modelItem => item.Stop.StopName)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">
                                <span class="bg-gray-100 text-gray-700 px-2 py-0.5 rounded text-xs">#@Html.DisplayFor(modelItem => item.StopSequence)</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">
                                <div class="flex flex-col">
                                    <span class="text-xs text-gray-400">ARR</span> @Html.DisplayFor(modelItem => item.ArrivalTime)
                                </div>
                                <div class="flex flex-col">
                                    <span class="text-xs text-gray-400">DEP</span> @Html.DisplayFor(modelItem => item.DepartureTime)
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex justify-end gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900 bg-indigo-50 hover:bg-indigo-100 p-2 rounded-full w-8 h-8 flex items-center justify-center transition-colors">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-gray-600 hover:text-gray-900 bg-gray-50 hover:bg-gray-100 p-2 rounded-full w-8 h-8 flex items-center justify-center transition-colors">
                                        <i class="fas fa-info"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900 bg-red-50 hover:bg-red-100 p-2 rounded-full w-8 h-8 flex items-center justify-center transition-colors">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any()) {
             <div class="text-center py-10">
                <div class="text-gray-400 mb-2 text-4xl"><i class="fas fa-clock"></i></div>
                <p class="text-gray-500">No stop times found.</p>
                <a asp-action="Create" class="text-indigo-600 hover:text-indigo-800 font-medium text-sm mt-2 inline-block">Create the first stop time</a>
            </div>
        }
    </form>
</div>

@section Scripts {
    <script>
        function filterTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const table = document.getElementById('stopTimesTable');
            const rows = table.querySelectorAll('tbody tr');

            rows.forEach(row => {
                const text = row.textContent || row.innerText;
                if (text.toLowerCase().indexOf(filter) > -1) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function toggleAll(source) {
            const checkboxes = document.getElementsByClassName('item-checkbox');
            for (let i = 0; i < checkboxes.length; i++) {
                if (checkboxes[i].closest('tr').style.display !== 'none') {
                    checkboxes[i].checked = source.checked;
                }
            }
            updateBulkActionState();
        }

        function updateBulkActionState() {
            const checkboxes = document.querySelectorAll('.item-checkbox:checked');
            const count = checkboxes.length;
            const bulkActions = document.getElementById('bulkActions');
            const selectedCount = document.getElementById('selectedCount');
            
            selectedCount.innerText = count;
            
            if (count > 0) {
                bulkActions.classList.remove('hidden');
            } else {
                bulkActions.classList.add('hidden');
            }
            
            // Checkbox state logic
            const allCheckboxes = document.getElementsByClassName('item-checkbox');
            const selectAll = document.getElementById('selectAll');
             if (count > 0 && count < allCheckboxes.length) {
                selectAll.indeterminate = true;
            } else {
                selectAll.indeterminate = false;
                selectAll.checked = (count === allCheckboxes.length && count > 0);
            }
        }

        function submitBulkDelete() {
            if (confirm('Are you sure you want to delete the selected stop times?')) {
                document.getElementById('bulkDeleteForm').submit();
            }
        }
    </script>
}
