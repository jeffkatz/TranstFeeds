@model TransitFeeds.Models.StopTime

@{
    ViewData["Title"] = "Edit Stop Time";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Edit Stop Time</h1>
            <p class="text-gray-500 mt-1">Update schedule for trip @Model.Trip?.GtfsTripId at @Model.Stop?.StopName</p>
        </div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg font-medium text-gray-700 shadow-sm hover:bg-gray-50 transition-colors">
            Back to Details
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow-soft border border-gray-100 overflow-hidden">
        <form asp-action="Edit" class="p-8">
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 text-red-700 rounded-xl text-sm border border-red-100"></div>
            <input type="hidden" asp-for="Id" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                <!-- Relationships -->
                <div class="space-y-2">
                    <label asp-for="TripId" class="block text-sm font-semibold text-gray-700">Trip</label>
                    <select asp-for="TripId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" asp-items="ViewBag.TripId"></select>
                    <span asp-validation-for="TripId" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="StopId" class="block text-sm font-semibold text-gray-700">Stop</label>
                    <select asp-for="StopId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" asp-items="ViewBag.StopId"></select>
                    <span asp-validation-for="StopId" class="text-xs text-red-500"></span>
                </div>

                <!-- Sequence -->
                <div class="space-y-2">
                    <label asp-for="StopSequence" class="block text-sm font-semibold text-gray-700">Stop Sequence</label>
                    <input asp-for="StopSequence" type="number" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    <span asp-validation-for="StopSequence" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="StopHeadsign" class="block text-sm font-semibold text-gray-700">Stop Headsign (Optional)</label>
                    <input asp-for="StopHeadsign" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    <span asp-validation-for="StopHeadsign" class="text-xs text-red-500"></span>
                </div>

                <!-- Times -->
                <div class="space-y-2">
                    <label asp-for="ArrivalTime" class="block text-sm font-semibold text-gray-700">Arrival Time</label>
                    <input asp-for="ArrivalTime" type="text" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" placeholder="HH:MM:SS" />
                    <span asp-validation-for="ArrivalTime" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="DepartureTime" class="block text-sm font-semibold text-gray-700">Departure Time</label>
                    <input asp-for="DepartureTime" type="text" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" placeholder="HH:MM:SS" />
                    <span asp-validation-for="DepartureTime" class="text-xs text-red-500"></span>
                </div>

                <!-- GTFS Details -->
                <div class="space-y-2">
                    <label asp-for="PickupType" class="block text-sm font-semibold text-gray-700">Pickup Type</label>
                    <select asp-for="PickupType" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" asp-items="Html.GetEnumSelectList<PickupDropOffType>()"></select>
                    <span asp-validation-for="PickupType" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="DropOffType" class="block text-sm font-semibold text-gray-700">Drop-off Type</label>
                    <select asp-for="DropOffType" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" asp-items="Html.GetEnumSelectList<PickupDropOffType>()"></select>
                    <span asp-validation-for="DropOffType" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="ShapeDistTraveled" class="block text-sm font-semibold text-gray-700">Shape Distance Traveled</label>
                    <input asp-for="ShapeDistTraveled" type="number" step="any" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="e.g. 1200.5" />
                    <span asp-validation-for="ShapeDistTraveled" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="Timepoint" class="block text-sm font-semibold text-gray-700">Timepoint</label>
                    <select asp-for="Timepoint" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" asp-items="Html.GetEnumSelectList<TimepointType>()">
                        <option value="">-- Inherit --</option>
                    </select>
                    <span asp-validation-for="Timepoint" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="ContinuousPickup" class="block text-sm font-semibold text-gray-700">Continuous Pickup</label>
                    <select asp-for="ContinuousPickup" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" asp-items="Html.GetEnumSelectList<ContinuousStopping>()">
                        <option value="">-- Inherit --</option>
                    </select>
                    <span asp-validation-for="ContinuousPickup" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="ContinuousDropOff" class="block text-sm font-semibold text-gray-700">Continuous Drop-off</label>
                    <select asp-for="ContinuousDropOff" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" asp-items="Html.GetEnumSelectList<ContinuousStopping>()">
                        <option value="">-- Inherit --</option>
                    </select>
                    <span asp-validation-for="ContinuousDropOff" class="text-xs text-red-500"></span>
                </div>
            </div>

            <div class="mt-10 pt-6 border-t border-gray-100 flex justify-end gap-3">
                <a asp-action="Index" class="px-6 py-2.5 border border-gray-300 rounded-xl font-medium text-gray-700 hover:bg-gray-50 transition-all">Discard Changes</a>
                <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white rounded-xl font-medium shadow-sm hover:bg-blue-700 transition-all">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
