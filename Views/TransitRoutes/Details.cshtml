@model TransitFeeds.Models.TransitRoute

@{
    ViewData["Title"] = "Route Details";
    
    // Prepare chart data: Trips by Direction
    var tripsByDirection = Model.Trips.GroupBy(t => t.DirectionId)
        .Select(g => new { Direction = g.Key, Count = g.Count() })
        .OrderBy(x => x.Direction)
        .ToList();

    var labels = System.Text.Json.JsonSerializer.Serialize(tripsByDirection.Select(x => x.Direction == (byte)0 ? "Outbound" : "Inbound"));
    var data = System.Text.Json.JsonSerializer.Serialize(tripsByDirection.Select(x => x.Count));
}

<div class="max-w-5xl mx-auto">
    <!-- Header -->
    <div class="mb-8 flex items-center justify-between">
        <div class="flex items-center gap-4">
             <div class="h-16 w-16 rounded-2xl flex items-center justify-center text-xl font-bold shadow-soft" 
                  style="background-color: #@Model.RouteColor; color: #@Model.RouteTextColor;">
                @Model.RouteShortName
            </div>
            <div>
                <h1 class="text-3xl font-bold text-gray-900 tracking-tight">@Model.RouteLongName</h1>
                <p class="text-gray-500 mt-1">Operated by @Model.Agency?.AgencyName</p>
            </div>
        </div>
        <div class="flex gap-3">
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg font-medium text-gray-700 shadow-sm hover:bg-gray-50 transition-colors">
                Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="inline-flex items-center px-4 py-2 bg-blue-600 border border-transparent rounded-lg font-medium text-white shadow-sm hover:bg-blue-700 transition-colors">
                Edit Route
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Details Card -->
        <div class="lg:col-span-2 bg-white rounded-2xl shadow-soft p-6 border border-gray-100">
            <h2 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-100">Route Information</h2>
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-6">
                <div>
                    <dt class="text-sm font-medium text-gray-500 mb-1">GTFS ID</dt>
                    <dd class="text-base text-gray-900 bg-gray-50 px-3 py-2 rounded-lg font-mono text-sm">@Model.GtfsRouteId</dd>
                </div>
                <div>
                     <dt class="text-sm font-medium text-gray-500 mb-1">Type</dt>
                    <dd class="text-base text-gray-900 bg-gray-50 px-3 py-2 rounded-lg">
                        @if(Model.RouteType == RouteType.Bus) { <span><i class="fas fa-bus mr-2 text-gray-400"></i>Bus</span> }
                        else if(Model.RouteType == RouteType.Subway) { <span><i class="fas fa-subway mr-2 text-gray-400"></i>Subway</span> }
                        else { <span>@Model.RouteType</span> }
                    </dd>
                </div>
                <div class="md:col-span-2">
                    <dt class="text-sm font-medium text-gray-500 mb-1">Description</dt>
                    <dd class="text-base text-gray-700">@Model.RouteDesc</dd>
                </div>
                <div class="md:col-span-2">
                    <dt class="text-sm font-medium text-gray-500 mb-1">More Info</dt>
                    <dd class="text-base text-blue-600 hover:underline">
                         @if (!string.IsNullOrEmpty(Model.RouteUrl))
                        {
                            <a href="@Model.RouteUrl" target="_blank">@Model.RouteUrl</a>
                        }
                        else
                        {
                            <span class="text-gray-400">No URL provided</span>
                        }
                    </dd>
                </div>
            </dl>
        </div>

        <!-- Visualization Card -->
        <div class="bg-white rounded-2xl shadow-soft p-6 border border-gray-100 flex flex-col">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Trip Frequency</h2>
            <div class="relative h-64 w-full">
                <canvas id="routeChart"></canvas>
            </div>
            <p class="text-xs text-gray-400 mt-4 text-center">Number of scheduled trips per direction.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const ctx = document.getElementById('routeChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(labels),
                datasets: [{
                    label: 'Trips',
                    data: @Html.Raw(data),
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.8)',
                        'rgba(99, 102, 241, 0.8)'
                    ],
                    borderRadius: 8,
                    barThickness: 40
                }]
            },
            options: {
                indexAxis: 'y', // Horizontal bar
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        grid: { display: false },
                    },
                    y: {
                        grid: { display: false }
                    }
                },
                plugins: {
                    legend: { display: false }
                }
            }
        });
    </script>
}
