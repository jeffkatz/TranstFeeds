@{
    ViewData["Title"] = "Dashboard";
    int agenciesCount = ViewBag.AgenciesCount ?? 0;
    int routesCount = ViewBag.RoutesCount ?? 0;
    int stopsCount = ViewBag.StopsCount ?? 0;
    int tripsCount = ViewBag.TripsCount ?? 0;
    int calendarCount = ViewBag.CalendarCount ?? 0;
    int stopTimesCount = ViewBag.StopTimesCount ?? 0;
}

<div class="space-y-8">
    
    <!-- Hero Section -->
    <div class="relative bg-white rounded-3xl p-8 shadow-medium overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-apple-blue opacity-5 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2 pointer-events-none"></div>
        <div class="relative z-10">
            <h1 class="text-3xl font-semibold text-gray-900 tracking-tight mb-2">Welcome Back</h1>
            <p class="text-gray-500 text-lg max-w-2xl">
                Your transit data command center. Manage agencies, optimize routes, and monitor system health from a single unified interface.
            </p>
            
            <div class="mt-8 flex flex-wrap gap-4">
               <a asp-controller="Import" asp-action="Index" class="inline-flex items-center px-6 py-3 bg-gray-900 text-white font-medium rounded-full hover:bg-black transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                   <i class="fas fa-file-import mr-2"></i> Import GTFS
               </a>
               <a asp-controller="Map" asp-action="Index" class="inline-flex items-center px-6 py-3 bg-white text-gray-900 border border-gray-200 font-medium rounded-full hover:bg-gray-50 transition-all shadow-sm">
                   <i class="fas fa-map mr-2 text-apple-blue"></i> View Live Map
               </a>
            </div>
        </div>
    </div>

    <!-- Quick Stats Grid (Bento Box) -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        
        <!-- Routes -->
        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow relative overflow-hidden group">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <i class="fas fa-route text-6xl text-green-500 transform rotate-12"></i>
            </div>
            <div class="relative z-10">
                <p class="text-sm font-semibold text-gray-400 uppercase tracking-wide">Routes</p>
                <div class="mt-2 flex items-baseline">
                    <span class="text-4xl font-bold text-gray-900">@routesCount</span>
                    <span class="ml-2 text-sm text-green-600 font-medium bg-green-50 px-2 py-0.5 rounded-full">Active</span>
                </div>
                <div class="mt-4">
                    <a asp-controller="TransitRoutes" asp-action="Index" class="text-sm font-medium text-green-600 hover:text-green-700">Manage Routes &rarr;</a>
                </div>
            </div>
        </div>

        <!-- Stops -->
        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow relative overflow-hidden group">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <i class="fas fa-map-pin text-6xl text-orange-500 transform -rotate-6"></i>
            </div>
            <div class="relative z-10">
                <p class="text-sm font-semibold text-gray-400 uppercase tracking-wide">Stops</p>
                <div class="mt-2 flex items-baseline">
                    <span class="text-4xl font-bold text-gray-900">@stopsCount</span>
                </div>
                <div class="mt-4">
                    <a asp-controller="Stops" asp-action="Index" class="text-sm font-medium text-orange-500 hover:text-orange-600">Manage Stops &rarr;</a>
                </div>
            </div>
        </div>

        <!-- Trips -->
        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow relative overflow-hidden group">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <i class="fas fa-bus text-6xl text-indigo-500 transform rotate-6"></i>
            </div>
            <div class="relative z-10">
                <p class="text-sm font-semibold text-gray-400 uppercase tracking-wide">Trips</p>
                <div class="mt-2 flex items-baseline">
                    <span class="text-4xl font-bold text-gray-900">@tripsCount</span>
                </div>
                <div class="mt-4">
                    <a asp-controller="Trips" asp-action="Index" class="text-sm font-medium text-indigo-600 hover:text-indigo-700">Manage Schedules &rarr;</a>
                </div>
            </div>
        </div>

        <!-- Agencies -->
        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow relative overflow-hidden group">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <i class="fas fa-building text-6xl text-blue-500"></i>
            </div>
            <div class="relative z-10">
                <p class="text-sm font-semibold text-gray-400 uppercase tracking-wide">Agencies</p>
                <div class="mt-2 flex items-baseline">
                    <span class="text-4xl font-bold text-gray-900">@agenciesCount</span>
                </div>
                <div class="mt-4">
                    <a asp-controller="Agencies" asp-action="Index" class="text-sm font-medium text-blue-600 hover:text-blue-700">View Agencies &rarr;</a>
                </div>
            </div>
        </div>

    </div>

    <!-- Secondary Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        
        <!-- Quick Actions Panel -->
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 lg:col-span-2">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-semibold text-gray-900">Quick Actions</h3>
                <span class="bg-gray-100 text-gray-500 text-xs font-medium px-2.5 py-0.5 rounded-full">Shortcuts</span>
            </div>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                <a asp-controller="TransitRoutes" asp-action="Create" class="flex flex-col items-center justify-center p-4 rounded-xl bg-gray-50 hover:bg-gray-100 transition-colors group">
                    <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center shadow-sm text-green-600 mb-3 group-hover:scale-110 transition-transform">
                        <i class="fas fa-plus"></i>
                    </div>
                    <span class="text-sm font-medium text-gray-700">Add Route</span>
                </a>
                <a asp-controller="Stops" asp-action="Create" class="flex flex-col items-center justify-center p-4 rounded-xl bg-gray-50 hover:bg-gray-100 transition-colors group">
                    <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center shadow-sm text-orange-500 mb-3 group-hover:scale-110 transition-transform">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <span class="text-sm font-medium text-gray-700">Add Stop</span>
                </a>
                 <a asp-controller="Trips" asp-action="Create" class="flex flex-col items-center justify-center p-4 rounded-xl bg-gray-50 hover:bg-gray-100 transition-colors group">
                    <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center shadow-sm text-indigo-500 mb-3 group-hover:scale-110 transition-transform">
                        <i class="fas fa-clock"></i>
                    </div>
                    <span class="text-sm font-medium text-gray-700">Add Trip</span>
                </a>
                <a asp-controller="ShapesMaster" asp-action="Create" class="flex flex-col items-center justify-center p-4 rounded-xl bg-gray-50 hover:bg-gray-100 transition-colors group">
                    <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center shadow-sm text-purple-500 mb-3 group-hover:scale-110 transition-transform">
                        <i class="fas fa-draw-polygon"></i>
                    </div>
                    <span class="text-sm font-medium text-gray-700">Add Shape</span>
                </a>
            </div>
        </div>

        <!-- System Status -->
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">System Status</h3>
            <div class="space-y-6">
                <div class="flex items-center justify-between">
                     <div class="flex items-center">
                         <div class="w-2 h-2 rounded-full bg-green-500 mr-3"></div>
                         <span class="text-sm text-gray-600">Database Connection</span>
                     </div>
                     <span class="text-sm font-medium text-green-600">Active</span>
                </div>
                 <div class="flex items-center justify-between">
                     <div class="flex items-center">
                         <div class="w-2 h-2 rounded-full bg-blue-500 mr-3"></div>
                         <span class="text-sm text-gray-600">Stop Times</span>
                     </div>
                     <span class="text-sm font-medium text-gray-900">@stopTimesCount.ToString("N0")</span>
                </div>
                <div class="flex items-center justify-between">
                     <div class="flex items-center">
                         <div class="w-2 h-2 rounded-full bg-pink-500 mr-3"></div>
                         <span class="text-sm text-gray-600">Services</span>
                     </div>
                     <span class="text-sm font-medium text-gray-900">@calendarCount</span>
                </div>
                
                 <div class="pt-4 border-t border-gray-100">
                    <p class="text-xs text-center text-gray-400">Last updated: @DateTime.Now.ToString("MMM dd, HH:mm")</p>
                </div>
            </div>
        </div>

    </div>
</div>
