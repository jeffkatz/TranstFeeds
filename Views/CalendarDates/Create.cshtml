@model TransitFeeds.Models.CalendarDate

@{
    ViewData["Title"] = "Add Exception";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Add Calendar Exception</h1>
            <p class="text-gray-500 mt-1">Directly add or remove service for a specific date.</p>
        </div>
        <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg font-medium text-gray-700 shadow-sm hover:bg-gray-50 transition-colors">
            Cancel
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow-soft border border-gray-100 overflow-hidden">
        <form asp-action="Create" class="p-8 space-y-6">
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 text-red-700 rounded-xl text-sm border border-red-100"></div>

            <div class="space-y-2">
                <label asp-for="GtfsServiceId" class="block text-sm font-semibold text-gray-700">Service ID (from GTFS)</label>
                <input asp-for="GtfsServiceId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="e.g. FULL_WEEK" />
                <span asp-validation-for="GtfsServiceId" class="text-xs text-red-500"></span>
            </div>

            <div class="grid grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label asp-for="Date" class="block text-sm font-semibold text-gray-700">Date</label>
                    <input asp-for="Date" type="date" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" />
                    <span asp-validation-for="Date" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="ExceptionType" class="block text-sm font-semibold text-gray-700">Exception Type</label>
                    <select asp-for="ExceptionType" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" asp-items="Html.GetEnumSelectList<ExceptionType>()"></select>
                    <span asp-validation-for="ExceptionType" class="text-xs text-red-500"></span>
                </div>
            </div>

            <div class="space-y-2">
                <label asp-for="TransitCalendarId" class="block text-sm font-semibold text-gray-700">Internal Calendar Mapping (Optional)</label>
                <select asp-for="TransitCalendarId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" asp-items="ViewBag.TransitCalendarId">
                    <option value="">-- No link --</option>
                </select>
                <span asp-validation-for="TransitCalendarId" class="text-xs text-red-500"></span>
            </div>

            <div class="mt-8 pt-6 border-t border-gray-100 flex justify-end gap-3">
                <a asp-action="Index" class="px-6 py-2.5 border border-gray-300 rounded-xl font-medium text-gray-700 hover:bg-gray-50 transition-all">Discard</a>
                <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white rounded-xl font-medium shadow-sm hover:bg-blue-700 transition-all">Save Exception</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
