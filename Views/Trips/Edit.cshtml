@model TransitFeeds.Models.Trip

@{
    ViewData["Title"] = "Edit Trip";
}

<div class="app-header">
    <div class="header-title">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="header-actions">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="GtfsTripId" class="control-label"></label>
                    <input asp-for="GtfsTripId" class="form-control" />
                    <span asp-validation-for="GtfsTripId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TransitRouteId" class="control-label"></label>
                    <select asp-for="TransitRouteId" class="form-control" asp-items="ViewBag.TransitRouteId"></select>
                    <span asp-validation-for="TransitRouteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServiceId" class="control-label"></label>
                    <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShapeId" class="control-label"></label>
                    <select asp-for="ShapeId" class="form-control" asp-items="ViewBag.ShapeId">
                        <option value="">-- None --</option>
                    </select>
                    <span asp-validation-for="ShapeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TripHeadsign" class="control-label"></label>
                    <input asp-for="TripHeadsign" class="form-control" />
                    <span asp-validation-for="TripHeadsign" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TripShortName" class="control-label"></label>
                    <input asp-for="TripShortName" class="form-control" />
                    <span asp-validation-for="TripShortName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DirectionId" class="control-label"></label>
                    <input asp-for="DirectionId" class="form-control" />
                    <span asp-validation-for="DirectionId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WheelchairAccessible" class="control-label"></label>
                    <input asp-for="WheelchairAccessible" class="form-control" />
                    <span asp-validation-for="WheelchairAccessible" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BlockId" class="control-label"></label>
                    <input asp-for="BlockId" class="form-control" />
                    <span asp-validation-for="BlockId" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
