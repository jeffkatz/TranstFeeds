@model TransitFeeds.Models.Trip

@{
    ViewData["Title"] = "Edit Trip";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Edit Trip</h1>
            <p class="text-gray-500 mt-1">Update details for trip @Model.GtfsTripId</p>
        </div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg font-medium text-gray-700 shadow-sm hover:bg-gray-50 transition-colors">
            Back to Details
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow-soft border border-gray-100 overflow-hidden">
        <form asp-action="Edit" class="p-8">
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 text-red-700 rounded-xl text-sm border border-red-100"></div>
            <input type="hidden" asp-for="Id" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                <!-- Relationships -->
                <div class="space-y-2">
                    <label asp-for="TransitRouteId" class="block text-sm font-semibold text-gray-700">Route</label>
                    <select asp-for="TransitRouteId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" asp-items="ViewBag.TransitRouteId"></select>
                    <span asp-validation-for="TransitRouteId" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="ServiceId" class="block text-sm font-semibold text-gray-700">Calendar Service</label>
                    <select asp-for="ServiceId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" asp-items="ViewBag.ServiceId"></select>
                    <span asp-validation-for="ServiceId" class="text-xs text-red-500"></span>
                </div>

                <!-- Basic Info -->
                <div class="space-y-2">
                    <label asp-for="GtfsTripId" class="block text-sm font-semibold text-gray-700">GTFS Trip ID</label>
                    <input asp-for="GtfsTripId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    <span asp-validation-for="GtfsTripId" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="TripHeadsign" class="block text-sm font-semibold text-gray-700">Headsign</label>
                    <input asp-for="TripHeadsign" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    <span asp-validation-for="TripHeadsign" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="TripShortName" class="block text-sm font-semibold text-gray-700">Short Name</label>
                    <input asp-for="TripShortName" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    <span asp-validation-for="TripShortName" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="DirectionId" class="block text-sm font-semibold text-gray-700">Direction</label>
                    <select asp-for="DirectionId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" asp-items="Html.GetEnumSelectList<DirectionId>()">
                        <option value="">-- No Direction --</option>
                    </select>
                    <span asp-validation-for="DirectionId" class="text-xs text-red-500"></span>
                </div>

                <!-- GTFS Details -->
                <div class="space-y-2">
                    <label asp-for="WheelchairAccessible" class="block text-sm font-semibold text-gray-700">Wheelchair Accessible</label>
                    <select asp-for="WheelchairAccessible" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" asp-items="Html.GetEnumSelectList<WheelchairBoarding>()"></select>
                    <span asp-validation-for="WheelchairAccessible" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="BikesAllowed" class="block text-sm font-semibold text-gray-700">Bikes Allowed</label>
                    <select asp-for="BikesAllowed" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" asp-items="Html.GetEnumSelectList<BikesAllowed>()"></select>
                    <span asp-validation-for="BikesAllowed" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="ShapeId" class="block text-sm font-semibold text-gray-700">Shape</label>
                    <select asp-for="ShapeId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" asp-items="ViewBag.ShapeId">
                        <option value="">-- No Shape --</option>
                    </select>
                    <span asp-validation-for="ShapeId" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="BlockId" class="block text-sm font-semibold text-gray-700">Block ID</label>
                    <input asp-for="BlockId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" />
                    <span asp-validation-for="BlockId" class="text-xs text-red-500"></span>
                </div>
            </div>

            <div class="mt-10 pt-6 border-t border-gray-100 flex justify-end gap-3">
                <a asp-action="Index" class="px-6 py-2.5 border border-gray-300 rounded-xl font-medium text-gray-700 hover:bg-gray-50 transition-all">Discard Changes</a>
                <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white rounded-xl font-medium shadow-sm hover:bg-blue-700 transition-all">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
