@model TransitFeeds.Models.Trip

@{
    ViewData["Title"] = "Delete Trip";
}

<div class="app-header">
    <div class="header-title">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="header-actions">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <p class="text-muted">This action cannot be undone.</p>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">GTFS ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.GtfsTripId)</dd>

                <dt class="col-sm-3">Route</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TransitRoute.RouteShortName)</dd>

                <dt class="col-sm-3">Headsign</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TripHeadsign)</dd>
            </dl>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
