@model TransitFeeds.Models.Stop

@{
    ViewData["Title"] = "Create Stop";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Create Transit Stop</h1>
            <p class="text-gray-500 mt-1">Add a new stop or station to the network.</p>
        </div>
        <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg font-medium text-gray-700 shadow-sm hover:bg-gray-50 transition-colors">
            Cancel
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow-soft border border-gray-100 overflow-hidden">
        <form asp-action="Create" class="p-8">
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 text-red-700 rounded-xl text-sm border border-red-100"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                <!-- Basic Info -->
                <div class="space-y-2">
                    <label asp-for="GtfsStopId" class="block text-sm font-semibold text-gray-700">GTFS Stop ID</label>
                    <input asp-for="GtfsStopId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" placeholder="e.g. S123" />
                    <span asp-validation-for="GtfsStopId" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="StopCode" class="block text-sm font-semibold text-gray-700">Stop Code (Public)</label>
                    <input asp-for="StopCode" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" placeholder="e.g. 50123" />
                    <span asp-validation-for="StopCode" class="text-xs text-red-500"></span>
                </div>

                <div class="md:col-span-2 space-y-2">
                    <label asp-for="StopName" class="block text-sm font-semibold text-gray-700">Stop Name</label>
                    <input asp-for="StopName" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="e.g. 42nd St - Port Authority" />
                    <span asp-validation-for="StopName" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="TtsStopName" class="block text-sm font-semibold text-gray-700">TTS Stop Name</label>
                    <input asp-for="TtsStopName" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="Text-to-speech name" />
                    <span asp-validation-for="TtsStopName" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="PlatformCode" class="block text-sm font-semibold text-gray-700">Platform Code</label>
                    <input asp-for="PlatformCode" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="e.g. 1, A, etc." />
                    <span asp-validation-for="PlatformCode" class="text-xs text-red-500"></span>
                </div>

                <!-- Coordinates -->
                <div class="space-y-2">
                    <label asp-for="StopLat" class="block text-sm font-semibold text-gray-700">Latitude</label>
                    <input asp-for="StopLat" type="number" step="any" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" placeholder="e.g. 40.7128" />
                    <span asp-validation-for="StopLat" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="StopLon" class="block text-sm font-semibold text-gray-700">Longitude</label>
                    <input asp-for="StopLon" type="number" step="any" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" placeholder="e.g. -74.0060" />
                    <span asp-validation-for="StopLon" class="text-xs text-red-500"></span>
                </div>

                <!-- GTFS Details -->
                <div class="space-y-2">
                    <label asp-for="LocationType" class="block text-sm font-semibold text-gray-700">Location Type</label>
                    <select asp-for="LocationType" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" asp-items="Html.GetEnumSelectList<LocationType>()"></select>
                    <span asp-validation-for="LocationType" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="WheelchairBoarding" class="block text-sm font-semibold text-gray-700">Wheelchair Boarding</label>
                    <select asp-for="WheelchairBoarding" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" asp-items="Html.GetEnumSelectList<WheelchairBoarding>()"></select>
                    <span asp-validation-for="WheelchairBoarding" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="ParentStationId" class="block text-sm font-semibold text-gray-700">Parent Station</label>
                    <select asp-for="ParentStationId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" asp-items="ViewBag.ParentStationId">
                        <option value="">-- No Parent Station --</option>
                    </select>
                    <span asp-validation-for="ParentStationId" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="ZoneId" class="block text-sm font-semibold text-gray-700">Zone ID</label>
                    <input asp-for="ZoneId" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" placeholder="e.g. Zone A" />
                    <span asp-validation-for="ZoneId" class="text-xs text-red-500"></span>
                </div>

                <!-- Extended Info -->
                <div class="md:col-span-2 space-y-2">
                    <label asp-for="StopUrl" class="block text-sm font-semibold text-gray-700">Stop URL</label>
                    <input asp-for="StopUrl" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none" placeholder="https://..." />
                    <span asp-validation-for="StopUrl" class="text-xs text-red-500"></span>
                </div>

                <div class="md:col-span-2 space-y-2">
                    <label asp-for="StopDesc" class="block text-sm font-semibold text-gray-700">Description</label>
                    <textarea asp-for="StopDesc" rows="3" class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none resize-none" placeholder="Additional details..."></textarea>
                    <span asp-validation-for="StopDesc" class="text-xs text-red-500"></span>
                </div>
            </div>

            <div class="mt-10 pt-6 border-t border-gray-100 flex justify-end gap-3">
                <a asp-action="Index" class="px-6 py-2.5 border border-gray-300 rounded-xl font-medium text-gray-700 hover:bg-gray-50 transition-all">Discard</a>
                <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white rounded-xl font-medium shadow-sm hover:bg-blue-700 transition-all">Create Stop</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
