@model TransitFeeds.Models.Stop

@{
    ViewData["Title"] = "Create Stop";
}

<div class="app-header">
    <div class="header-title">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="header-actions">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GtfsStopId" class="control-label"></label>
                    <input asp-for="GtfsStopId" class="form-control" />
                    <span asp-validation-for="GtfsStopId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StopCode" class="control-label"></label>
                    <input asp-for="StopCode" class="form-control" />
                    <span asp-validation-for="StopCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StopName" class="control-label"></label>
                    <input asp-for="StopName" class="form-control" />
                    <span asp-validation-for="StopName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StopDesc" class="control-label"></label>
                    <textarea asp-for="StopDesc" class="form-control"></textarea>
                    <span asp-validation-for="StopDesc" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="StopLat" class="control-label"></label>
                        <input asp-for="StopLat" class="form-control" type="number" step="any" />
                        <span asp-validation-for="StopLat" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="StopLon" class="control-label"></label>
                        <input asp-for="StopLon" class="form-control" type="number" step="any" />
                        <span asp-validation-for="StopLon" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ZoneId" class="control-label"></label>
                    <input asp-for="ZoneId" class="form-control" />
                    <span asp-validation-for="ZoneId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StopUrl" class="control-label"></label>
                    <input asp-for="StopUrl" class="form-control" />
                    <span asp-validation-for="StopUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LocationType" class="control-label"></label>
                    <input asp-for="LocationType" class="form-control" />
                    <span asp-validation-for="LocationType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ParentStationId" class="control-label"></label>
                    <select asp-for="ParentStationId" class ="form-control" asp-items="ViewBag.ParentStationId">
                        <option value="">-- None --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="StopTimezone" class="control-label"></label>
                    <input asp-for="StopTimezone" class="form-control" />
                    <span asp-validation-for="StopTimezone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WheelchairBoarding" class="control-label"></label>
                    <input asp-for="WheelchairBoarding" class="form-control" />
                    <span asp-validation-for="WheelchairBoarding" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
