@model TransitFeeds.Models.Stop

@{
    ViewData["Title"] = "Delete Stop";
}

<div class="app-header">
    <div class="header-title">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="header-actions">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <p class="text-muted">This action cannot be undone.</p>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">GTFS ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.GtfsStopId)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StopName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StopName)</dd>

                <dt class="col-sm-3">Coordinates</dt>
                <dd class="col-sm-9">@Model.StopLat, @Model.StopLon</dd>
            </dl>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
